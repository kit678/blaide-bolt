{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "types": ["node", "vite/client"],
    "declaration": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    // "vite.config.ts",
    // "api/sendEmail.vercel.ts",
    // "src/testServer.ts",
    // "src/utils/env.ts",
    // "src/vite-env.d.ts"
    "vite.config.ts",
    "api/**/*.ts",
    "src/**/*"
  ]
}
